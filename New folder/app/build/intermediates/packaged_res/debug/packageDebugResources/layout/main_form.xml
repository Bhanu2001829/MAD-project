<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycleView"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.madfinalproject.MainFormActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sidetop_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/img_1"
        />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="194dp"
        android:layout_height="189dp"
        android:layout_below="@id/img_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-47dp"

        android:src="@drawable/image_1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_2"
        android:text="NES EDU CAD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="40dp"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"
        android:id="@+id/txt_1"
        />


    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_1"
        android:fontFamily=""
        android:gravity="center"
        android:padding="30dp"
        android:text="get your course of us and win the life and careeer path"
        android:textColor="@color/black"

        android:textSize="16sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:width="300dp"
        android:text="Login"
        android:layout_below="@+id/txt_2"
        android:backgroundTint="@color/SecondaryColor"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/btn_1"
        android:shadowColor="@color/black"

        />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp"
        android:backgroundTint="@color/SecondaryColor"
        android:fontFamily=""
        android:shadowColor="@color/black"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="15sp"

        android:textStyle="bold" />


</RelativeLayout>