<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:padding="20dp"
        android:layout_width="411dp"
        android:layout_height="912dp"
        android:layout_margin="15px"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/hey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Hey!"
            android:textColor="@color/primaryColor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ACCname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Welcome to ACCName"
            android:textColor="@color/primaryColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="178dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:padding="10dp"
            app:srcCompat="@drawable/_21_2217551_computer_user_clip_art" />

        <TextView
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="First Name"
            android:textColor="@color/thirdColor"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="244dp" />

        <EditText
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:ems="10"
            android:hint="Enter your First name"
            android:inputType="text"
            android:text=""
            android:textColorHint="#888888"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="145dp" />

        <TextView
            android:id="@+id/llname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/thirdColor"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="243dp" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:ems="10"
            android:hint="Enter your Last name"
            android:inputType="text"
            android:text=""
            android:textColorHint="#888888"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="640dp" />

        <TextView
            android:id="@+id/ldbirth"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="Date of Birth"
            android:textColor="@color/thirdColor"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="269dp" />

        <EditText
            android:id="@+id/birthday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:ems="10"
            android:hint="dd/mm/yyyy"
            android:inputType="date"
            android:textColorHint="#888888"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="390dp" />

        <TextView
            android:id="@+id/llocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIC"
            android:textColor="@color/thirdColor"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="343dp" />

        <EditText
            android:id="@+id/nic"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:ems="10"
            android:hint="National Identity Card Number"
            android:inputType="text"
            android:textColorHint="#888888"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="390dp" />

        <TextView
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/thirdColor"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="305dp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:ems="10"
            android:hint="Enter your address"
            android:inputType="text"
            android:textColorHint="#888888"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="390dp" />

        <TextView
            android:id="@+id/lcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact number"
            android:textColor="@color/thirdColor"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="263dp"
            tools:layout_editor_absoluteY="292dp" />

        <EditText
            android:id="@+id/contactNumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:ems="10"
            android:hint="+94"
            android:inputType="number"
            android:textColorHint="#888888"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="767dp" />

        <TextView
            android:id="@+id/lemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/thirdColor"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="256dp"
            tools:layout_editor_absoluteY="343dp" />

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_shape"
            android:ems="10"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#888888"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="694dp" />


        <Button
            android:id="@+id/applybtn"
            android:layout_width="181dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/SecondaryColor"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="19sp"
            tools:layout_editor_absoluteX="230dp"
            tools:layout_editor_absoluteY="193dp" />


    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>