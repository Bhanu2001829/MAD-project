<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCourse">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="413dp"
        android:layout_height="63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginBottom="580dp"
            android:src="@drawable/nimthera_app_l2_01"
            app:srcCompat="@drawable/nimthera_app_l2_01" />

        <ImageButton

            android:id="@+id/menuButton"
            android:layout_width="53dp"
            android:layout_height="64dp"
            android:background="@color/primaryColor"
            android:contentDescription="menu"
            android:src="@drawable/baseline_account_circle_24" />

        <EditText
            android:id="@+id/searchBar"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="242dp"
            android:layout_height="64dp"
            android:background="@color/background"
            android:hint="     What are you looking for" />

        <ImageButton
            android:id="@+id/notificationButton"
            android:layout_width="54dp"
            android:layout_height="63dp"
            android:background="@color/primaryColor"
            android:contentDescription="Notifications"
            android:src="@drawable/baseline_circle_notifications_24"
            tools:srcCompat="@drawable/baseline_circle_notifications_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/CouresId"
        android:layout_width="418dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:background="@color/SecondaryColor"
        android:text="Courses"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView2"
        android:layout_width="410dp"
        android:layout_height="69dp"
        android:background="@drawable/button_shape"
        app:backgroundTint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/guest_menu"
        app:itemIconTint="#FFFF"
        app:itemTextColor="@color/white"
        app:itemIconSize="32dp"/>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="731dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="notification_panel"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView2"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/Course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/couresId"
                android:layout_width="381dp"
                android:layout_height="392dp"
                android:layout_margin="15dp"
                android:background="@drawable/button_shape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/branchName"
                    android:layout_width="363dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Course Name"
                    android:textAlignment="center"
                    android:textColor="@color/thirdColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lcourse_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Course Name"
                    android:textColor="@color/thirdColor"
                    android:textSize="19sp"
                    tools:layout_editor_absoluteX="263dp"
                    tools:layout_editor_absoluteY="244dp" />


                <TextView
                    android:id="@+id/Categoty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="@color/thirdColor"
                    android:textSize="19sp"
                    tools:layout_editor_absoluteX="81dp"
                    tools:layout_editor_absoluteY="243dp" />

                <TextView
                    android:id="@+id/badge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Badge"
                    android:textColor="@color/thirdColor"
                    android:textSize="19sp"
                    tools:layout_editor_absoluteX="81dp"
                    tools:layout_editor_absoluteY="243dp" />


                <TextView
                    android:id="@+id/Duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textColor="@color/thirdColor"
                    android:textSize="19sp"
                    tools:layout_editor_absoluteX="81dp"
                    tools:layout_editor_absoluteY="269dp" />


                <TextView
                    android:id="@+id/lbranch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch"
                    android:textColor="@color/thirdColor"
                    android:textSize="19sp"
                    tools:layout_editor_absoluteX="92dp"
                    tools:layout_editor_absoluteY="343dp" />


                <TextView
                    android:id="@+id/lstarting_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textColor="@color/thirdColor"
                    android:textSize="19sp"
                    tools:layout_editor_absoluteX="92dp"
                    tools:layout_editor_absoluteY="305dp" />


                <TextView
                    android:id="@+id/lclosing_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Closing Date"
                    android:textColor="@color/thirdColor"
                    android:textSize="19sp"
                    tools:layout_editor_absoluteX="263dp"
                    tools:layout_editor_absoluteY="292dp" />


                <TextView
                    android:id="@+id/courseFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Course Fee"
                    android:textColor="@color/thirdColor"
                    android:textSize="19sp"
                    tools:layout_editor_absoluteX="81dp"
                    tools:layout_editor_absoluteY="243dp" />

                <TextView
                    android:id="@+id/course_discription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5px"
                    android:text="Description"
                    android:textColor="@color/thirdColor"
                    android:textSize="23sp" />

                <Button
                    android:id="@+id/applyCourseBtn"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20px"
                    android:background="@drawable/button_shape"
                    android:backgroundTint="@color/SecondaryColor"
                    android:text="Apply"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold">

                </Button>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>